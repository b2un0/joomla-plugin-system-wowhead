<?xml version="1.0" encoding="utf-8"?>
<!-- @Version $Id$ -->
<extension version="1.6" type="plugin" group="system" method="upgrade">
    <name>Systen - Wowhead</name>
    <author>Branko Wilhelm</author>
    <creationDate>Apr 2013</creationDate>
    <copyright>Copyright (C) 2013 Branko Wilhelm</copyright>
    <license>GNU General Public License v3</license>
    <authorEmail>bw@z-index.net</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>@SVN_REVISION@</version>
    <description>include wowhead Javascript</description>
    <files>
        <filename plugin="wowhead">wowhead.php</filename>
        <filename>index.html</filename>
    </files>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field type="radio" name="colorlinks" default="1" label="Color Links">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field type="radio" name="iconizelinks" default="0" label="Iconize Links">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field type="radio" name="renamelinks" default="0" label="Rename Links">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
		<server type="extension" priority="1" name="Wowhead">http://www.z-index.net/en/joomla/wowhead/updatestream.xml</server>
	</updateservers>
</extension>