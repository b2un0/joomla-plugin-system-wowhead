<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
    <name>System - Wowhead</name>
    <author>Branko Wilhelm</author>
    <creationDate>Apr 2013</creationDate>
    <copyright>Copyright (C) 2013 - 2014 Branko Wilhelm</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <authorEmail>branko.wilhelm@gmail.com</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>@REVISION@</version>
    <description>include wowhead javascript for link tooltips</description>
    <files>
        <filename plugin="wowhead">wowhead.php</filename>
    </files>
    <updateservers>
        <server type="extension" priority="1" name="System - Wowhead">https://raw.githubusercontent.com/z-index-net/joomla-plugin-system-wowhead/master/updatestream.xml</server>
    </updateservers>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field type="radio" class="btn-group" name="colorlinks" default="1" label="Color Links">
                    <option value="1">JYes</option>
                    <option value="0">JNo</option>
                </field>
                <field type="radio" class="btn-group" name="iconizelinks" default="0" label="Iconize Links">
                    <option value="1">JYes</option>
                    <option value="0">JNo</option>
                </field>
                <field type="radio" class="btn-group" name="renamelinks" default="0" label="Rename Links">
                    <option value="1">JYes</option>
                    <option value="0">JNo</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
