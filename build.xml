<?xml version="1.0" encoding="utf-8"?>
<project name="plg_wowhead" basedir="." default="build">
	
	<svnlastrevision workingcopy="." propertyname="revision" />
	
	<property name="zip" value="/var/www/_svn/${phing.project.name}.rev.${revision}.zip" />

	<fileset dir="." id="allfiles">
		<include name="**" />
		<exclude name="build.xml" />
		<exclude name=".**"/>
	</fileset>
	
	<fileset dir="_tmp" id="tmp">
		<include name="**" />
	</fileset>
	
	<target name="cleanup">
		<delete dir="_tmp" />
		<delete file="${zip}" />
	</target>
	
	<target name="build" depends="cleanup">
		
		<copy todir="_tmp">
			<fileset refid="allfiles" />
			<filterchain>
				<replacetokens>
					<token key="SVN_REVISION" value="rev ${revision}" />
				</replacetokens>
			</filterchain>
		</copy>
		
		<zip destfile="${zip}">
			<fileset refid="tmp" />
		</zip>
		
		<delete dir="_tmp" />

	</target>
	
</project>